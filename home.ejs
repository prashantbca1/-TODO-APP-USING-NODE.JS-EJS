<html>

    <head>
        <title>
            
            <%= tittle %>

        </title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
         <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
  <link rel="stylesheet" href="./style.css">
  
    </head>
   <script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
   
   <body class="container-fluid">
   
     <div class="mt-5  justify-content-center align-items-center text-center">
       
      <div class="row mt-2">
         
          <div class="col-3"></div>
          <div class="col-6">
          <div class="card">
            <div class="text-align-center text-center mt-5">
              <h1>Todo App</h1>
              
             </div>
            <form action="/create-task" method="POST">
              <div class="card-header"><label class="form-label">Description </label>
               <input type="text" name="description" placeholder="What do You need to do?" autocomplete="off" required>
                </div>
                <div class="card-header" >
                  <label class="form-label">
                      Category
                  </label>
                      <select class="form-select" name="category"required>
                       
                        <option>Choose a category</option>
                      <option id="categ1">PERSONAL</option>

                      <option id="categ2">WORK</option>
                      <option id="categ3">SCHOOL</option>
                      <option id="categ4">CLEANING</option>
                      <option id="categ5">OTHER</option>
                  </select>
                  
                  <label class="form-label">
                    Date
                  </label>
                      
                  <input type="date" name="date" class="" required min="">
                </div>
               <div class="d-flex justify-content-between card-body">
                
               
             </div>
             <li><button type="submit" class="btn btn-success" id="add" value="ADD TASK">
              <span class="bi bi-plus"></span>Add
              </button></li>
              </form>
  
            <form action="/delete-task" method="GET">
              <li><button type="submit"class="btn btn-danger" id="del"value="DELETE TASK">
                <span class="bi bi-trash-fill"> Delete</span>
               </button></li>
              <div class="card-body">
                
                
                 <h2>Task_List</h2><hr>
                 <hr>
                 <% for(let i of task) { %>
                  <div class="border">
                   <input type="checkbox" id="checkbox" name="<%= i._id %>">
                   <li><p id="task-description"><%=i.description%></p></li>
                    
                    <dl><p id="task-category"></p> <%= i.category%></dl>
                    
                    <li><p id="due-date"> <%=i.date%></p></li>
                  </div>
                     
                      <% } %>
                
              </div>
            </form>
          
          
            
          </div>
            
          
      </div>
          
    </div>
  </div>
      
    
  </body>
  </html>
